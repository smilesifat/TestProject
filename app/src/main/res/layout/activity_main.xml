                        android:textColor="@color/grey_010"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="All payments are processed instantly over a secure \n payment protocol."
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="33dp"
                        android:src="@drawable/easy_return" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_margin="5dp"
                        android:text="Easy Return"
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="If an item arrived damaged or not as described, you \n can send it back for a full refund."
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="33dp"
                        android:src="@drawable/money_back" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_margin="5dp"
                        android:text="Money Back Guarantee"
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="Receive your item as described. Or your money back."
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
