                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="BDT. 2,850"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:text="BDT. 3050"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape_green"
                        android:text="25%"
                        android:textAlignment="center"
                        android:textColor="@color/green_002"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/love_plus" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:src="@drawable/ic_baseline_share_24" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:text="TUINANLE Sandals Women 2020 New Sexy Open-toed Sandals Wedge Outdoor Cool Platform Shoes Ladies Beach Summer Sandalia Feminina"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="17dp"
                        android:layout_weight="1"
                        android:text="4.8"
                        android:textColor="@color/green_003"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="17dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_star_rate_24" />

                    <TextView
