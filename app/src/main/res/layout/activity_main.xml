                            android:entries="@array/z_drop_premium_shipping"
                            android:paddingStart="15dp"
                            android:textAlignment="textStart" />
                    </LinearLayout>
                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <ExpandableListView
                       android:id="@+id/expendable_list_view"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:src="@drawable/image_pant3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="315dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/image_pant1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/image_pant2" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        android:paddingTop="10dp"
                        android:text="View Full Description"
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_001"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="100dp"
                    android:paddingBottom="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginBottom="10dp"
                        android:text="You May Also Like"
                        android:textAlignment="center"
                        android:textColor="@color/grey_010"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <GridView
                        android:id="@+id/product_grid_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="5dp"
                        android:listSelector="@color/green_002"
                        android:numColumns="2"
                        android:verticalSpacing="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="33dp"
                        android:src="@drawable/ic_baseline_security_24" />

                    <TextView
